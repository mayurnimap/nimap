<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginTop="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">




    <ImageView
        android:id="@+id/product_tmb"
        android:layout_width="115dp"
        android:layout_height="100dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/pizza_details"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:padding="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/product_tmb">

        <TextView
            android:id="@+id/product_title"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="viewStart"
            android:text="Kings Deal"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:maxLines="1"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/product_desc"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Any medium classic pizza + a chocolate pizza + a pet drink"
            android:textSize="12dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/product_prize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="$20.34"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/pizza_details"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
